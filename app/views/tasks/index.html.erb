<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %>
             :
          <%= task.status %>
             &gt;
          <%= task.content %>        
      </li>
    <% end %>
  </ul>
    <%= link_to '新規タスクの追加', new_task_path %>
<% else %>

  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  <%= link_to 'Login', login_path, class: 'nav-link' %>

<% end %>